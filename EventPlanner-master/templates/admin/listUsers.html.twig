{% extends 'view/base.html.twig' %}

{% block body %}

    <h1 class="text-center my-5">Users list</h1>
        <div class="row d-flex mt-4">
            <div class="col-10 offset-lg-3 col-lg-6 d-flex justify-content-center text-center ">
                <table class="table table-bordered">
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Username</th>
                        <th scope="col">Last name</th>
                        <th scope="col">First name</th>
                        <th colspan="2">Action(s)</th>
                    </tr>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.username }}</td>
                            <td>{{ user.lastName }}</td>
                            <td>{{ user.firstName }}</td>
                            {% if user.isActive %}
                                <td><a class="text-bleu" href="{{ path('admin_deactivate_user',{'id' : user.id} ) }}">Disable</a></td>
                            {% else %}
                                <td>     </td>
                            {% endif %}
                            <td><a class="text-bleu" href="{{ path('admin_delete_user',{'id' : user.id} ) }}">Delete</a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>


{% endblock %}

{% block title %}
    {{ parent() }} | All users
{% endblock %}

