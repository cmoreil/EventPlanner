{% extends 'view/base.html.twig' %}

{% block title %}
    User's profile
{% endblock %}

{% block body %}

    <h3 class="text-center my-4">{{ user.username }}</h3>
    <div class="row">
        <div class="col text-center my-4 ">
            <img class="profilPicture" src="{{ asset('images/profilePictures/' ~ user.picture) }}" alt="{{ user.id }}">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 justify-content-center text-center mt-3">
            <p>First Name : {{ user.firstName }} </p>
            <p>Last Name : {{ user.lastName }}</p>
            <p>Email : {{ user.email }}</p>
            <p>Phone Number : {{ user.phoneNumber }}</p>
            <p>Referent Site : {{ user.site.name }}</p>
        </div>
    </div>


{% endblock %}


