{% extends 'view/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">


                <form method="post" class="form-horizontal">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <div class="row d-flex justify-content-center text-center">
                        <div class="col-sm-2 mt-5 mb-5">
                            <h3>Please sign in</h3>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center mb-4 mb-md-3">
                        <div class="col-sm-3 mb-2 mb-md-0">
                            <label for="inputIdentifier ">Identifier (email or username)</label>
                        </div>
                        <div class="col-sm-4 d-flex">
                            <input type="text" value="" name="email" id="inputIdentifier" class="form-control" required
                                   autofocus>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center mb-4">

                        <div class="col-sm-3 mb-2 mb-md-0">
                            <label for="inputPassword"
                                   class="col-sm-offset-2 col-sm-2 control-label justify-content-end">Password</label>
                        </div>
                        <div class="col-sm-4 d-flex">
                            <input type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    #}
                    <div class="row d-flex justify-content-center text-center mb-3">

                        <div class="col-sm-4">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center text-center mb-3">

                        <div class="col-sm-4">

                            <button class="btn bouton" type="submit">
                                Sign in
                            </button>
                        </div>
                    </div>
                </form>
            </div><!--col-->
        </div><!--row-->
    </div><!--container pas fluid-->

{% endblock %}
